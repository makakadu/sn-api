<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Model\Chats\Action" table="chat_actions">
        <options>
            <option name="charset">utf8mb4</option>
            <option name="collate">utf8mb4_unicode_ci</option>
        </options>
        
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="createdAt" column="created_at" type="datetime" />
        <field name="type" type="integer" />
        <field name="messageId" column='message_id' type="string" />
        <field name="messageClientId" column='message_client_id' type="string" />
        <field name="messageCreatorId" column='message_creator_id' type="string" />
        <field name="initiatorId" column='initiator_id' type="string" />
        
        <many-to-one
            target-entity="App\Domain\Model\Chats\Chat"
            field="chat"
            inversed-by="actions"
            orphan-removal='true'
        />
        
    </entity>
</doctrine-mapping>
